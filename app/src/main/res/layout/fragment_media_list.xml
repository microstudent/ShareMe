<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.leaves.app.shareme.ui.fragment.AudioListFragment">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.microstudent.app.bouncyfastscroller.vertical.VerticalBouncyFastScroller
        android:id="@+id/vbfs"
        android:padding="10dp"
        app:behavior="simple_with_indicator"
        app:theme_color="@color/colorPrimary"
        app:alpha2="0.6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
