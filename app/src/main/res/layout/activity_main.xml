<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leaves.app.shareme.ui.activity.MainActivity">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/MainToolbarTheme"
        app:popupTheme="@style/ToolbarPopupTheme"
        app:logo="@drawable/ic_action"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_larger"
            android:paddingLeft="@dimen/spacing_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/layout_bottom"
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/view_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="@dimen/spacing_more_small"
        android:layout_marginRight="@dimen/spacing_more_small"
        android:layout_marginBottom="@dimen/spacing_small"
        app:layout_behavior="com.leaves.app.shareme.ui.behavior.DockerBehavior">
        <FrameLayout
            android:id="@+id/container_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/view_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_more_small"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="10dp">
        <FrameLayout
            android:id="@+id/container_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
